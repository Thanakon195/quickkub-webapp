# ========================================
# üöÄ QUICKKUB PAYMENT GATEWAY - BACKEND
# ========================================

# ========================================
# üåç APPLICATION CONFIGURATION
# ========================================
NODE_ENV=development
BACKEND_PORT=3002
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true
ENABLE_SWAGGER=true

# ========================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ========================================
DATABASE_URL=postgresql://quickkub_user:quickkub_password@localhost:5432/quickkub_db
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=quickkub_user
DB_PASSWORD=quickkub_password
DB_DATABASE=quickkub_db
DB_SYNCHRONIZE=true
DB_LOGGING=true
DB_MIGRATIONS_RUN=true

# ========================================
# üîê JWT CONFIGURATION
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# ========================================
# üîÑ REDIS CONFIGURATION
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# üìß EMAIL CONFIGURATION
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@quickkub.com
SMTP_SECURE=false

# ========================================
# üíæ S3 STORAGE CONFIGURATION
# ========================================
S3_ENDPOINT=localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=quickkub-storage
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true

# ========================================
# üîí SECURITY CONFIGURATION
# ========================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your-session-secret-change-in-production

# ========================================
# üí≥ PAYMENT GATEWAY CONFIGURATION
# ========================================
