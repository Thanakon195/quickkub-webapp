RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# ========================================
# üìä MONITORING & LOGGING
# ========================================
LOG_LEVEL=debug
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# ========================================
# üîî NOTIFICATION CONFIGURATION
# ========================================
